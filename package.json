{
  "name": "intl-codegen",
  "version": "2.2.1",
  "description": "generate code and type definitions from translations",
  "author": "Arpad Borsos <arpad.borsos@googlemail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eversport/intl-codegen.git"
  },
  "bugs": {
    "url": "https://github.com/eversport/intl-codegen/issues"
  },
  "homepage": "https://github.com/eversport/intl-codegen#readme",
  "main": "codegen.js",
  "module": "codegen.mjs",
  "browser": "codegen.umd.js",
  "types": "codegen.d.ts",
  "sideEffects": false,
  "files": [
    "codegen*",
    "runtime*"
  ],
  "scripts": {
    "clean": "rimraf codegen* runtime* .testoutput",
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json && rollup -c",
    "pretest": "npm run build",
    "test": "cross-env LANG=en TZ=Europe/Vienna NODE_ICU_DATA=node_modules/full-icu jest --runInBand --verbose",
    "prepublishOnly": "npm run test"
  },
  "dependencies": {
    "@fluent/langneg": "^0.5.2",
    "@fluent/syntax": "^0.17.0",
    "@formatjs/icu-messageformat-parser": "^2.0.4",
    "fs-extra": "^10.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.0",
    "@types/babel__code-frame": "^7.0.2",
    "@types/fs-extra": "^9.0.11",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.6.1",
    "@types/react": "^17.0.8",
    "@types/react-dom": "^17.0.5",
    "cross-env": "^7.0.3",
    "full-icu": "^1.3.4",
    "intl-pluralrules": "^1.2.2",
    "jest": "^27.0.3",
    "prettier": "^2.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup": "^2.50.5",
    "rollup-plugin-dts": "^3.0.2",
    "ts-jest": "^27.0.1",
    "typescript": "4.3.2"
  },
  "optionalDependencies": {
    "@babel/code-frame": "^7.12.13"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "collectCoverage": true,
    "coverageReporters": [
      "html",
      "json",
      "text-summary"
    ],
    "coveragePathIgnorePatterns": [
      ".testoutput",
      "tests",
      "node_modules"
    ],
    "testPathIgnorePatterns": [
      "/fixtures/",
      "/.testoutput/"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).(ts|tsx)"
    ],
    "moduleNameMapper": {
      "intl-codegen/runtime-react": "<rootDir>/src/runtime-react",
      "intl-codegen/runtime": "<rootDir>/src/runtime"
    },
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "exclude": [
            ".testoutput/**/*"
          ]
        }
      }
    }
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "all"
  }
}
