{
  "name": "intl-codegen",
  "version": "2.2.1",
  "description": "generate code and type definitions from translations",
  "author": "Arpad Borsos <arpad.borsos@googlemail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eversport/intl-codegen.git"
  },
  "bugs": {
    "url": "https://github.com/eversport/intl-codegen/issues"
  },
  "homepage": "https://github.com/eversport/intl-codegen#readme",
  "main": "codegen.js",
  "module": "codegen.mjs",
  "browser": "codegen.umd.js",
  "types": "codegen.d.ts",
  "sideEffects": false,
  "files": [
    "codegen*",
    "runtime*"
  ],
  "scripts": {
    "clean": "rimraf codegen* runtime* .testoutput",
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json && rollup -c",
    "pretest": "npm run build",
    "test": "cross-env LANG=en TZ=Europe/Vienna NODE_ICU_DATA=node_modules/full-icu jest --runInBand --verbose",
    "prepublishOnly": "npm run test"
  },
  "dependencies": {
    "fluent-langneg": "^0.3.0",
    "fluent-syntax": "^0.14.0",
    "fs-extra": "^8.1.0",
    "intl-messageformat-parser": "^1.8.1"
  },
  "devDependencies": {
    "@types/babel__code-frame": "^7.0.1",
    "@types/fs-extra": "^8.0.1",
    "@types/jest": "^24.0.22",
    "@types/node": "^12.12.7",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.4",
    "cross-env": "^6.0.3",
    "deindent": "^0.1.0",
    "full-icu": "^1.3.0",
    "intl-pluralrules": "^1.1.1",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "rollup": "^1.26.5",
    "rollup-plugin-dts": "^1.1.12",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "ts-jest": "^24.1.0",
    "typescript": "3.7.2"
  },
  "optionalDependencies": {
    "@babel/code-frame": "^7.5.5"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "collectCoverage": true,
    "coverageReporters": [
      "html",
      "json",
      "text-summary"
    ],
    "coveragePathIgnorePatterns": [
      ".testoutput",
      "tests",
      "node_modules"
    ],
    "testPathIgnorePatterns": [
      "/fixtures/",
      "/.testoutput/"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).(ts|tsx)"
    ],
    "moduleNameMapper": {
      "intl-codegen/runtime-react": "<rootDir>/src/runtime-react",
      "intl-codegen/runtime": "<rootDir>/src/runtime"
    },
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "pathRegex": "^((?!testoutput).)*$"
        }
      }
    }
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "all"
  }
}
