{
  "name": "intl-codegen",
  "version": "2.0.0-alpha.4",
  "description": "generate code and type definitions from translations",
  "author": "Arpad Borsos <arpad.borsos@googlemail.com>",
  "license": "MIT",
  "main": "codegen.js",
  "module": "codegen.mjs",
  "browser": "codegen.umd.js",
  "types": "codegen.d.ts",
  "sideEffects": false,
  "files": [
    "codegen*",
    "runtime*"
  ],
  "scripts": {
    "clean": "rimraf codegen* runtime* .testoutput",
    "prebuild": "npm run clean",
    "build": "tsc --project tsconfig.build.json && rollup -c",
    "pretest": "npm run build",
    "test": "cross-env TZ=Europe/Vienna NODE_ICU_DATA=node_modules/full-icu jest --runInBand",
    "prepublishOnly": "npm run test"
  },
  "dependencies": {
    "fluent-langneg": "^0.1.1",
    "fluent-syntax": "^0.13.0",
    "fs-extra": "^8.0.1",
    "intl-messageformat-parser": "^1.6.8"
  },
  "devDependencies": {
    "@types/babel__code-frame": "^7.0.1",
    "@types/fs-extra": "^7.0.0",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.0.10",
    "@types/react": "^16.8.22",
    "@types/react-dom": "^16.8.4",
    "cross-env": "^5.2.0",
    "deindent": "^0.1.0",
    "full-icu": "^1.3.0",
    "intl-pluralrules": "^1.0.2",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "rollup": "^1.16.2",
    "rollup-plugin-dts": "^1.1.4",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.0.4",
    "ts-jest": "^24.0.2",
    "typescript": "3.5.2"
  },
  "optionalDependencies": {
    "@babel/code-frame": "^7.0.0"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "collectCoverage": true,
    "coverageReporters": [
      "html",
      "json",
      "text-summary"
    ],
    "coveragePathIgnorePatterns": [
      ".testoutput",
      "tests",
      "node_modules"
    ],
    "testPathIgnorePatterns": [
      "/fixtures/",
      "/.testoutput/"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).(ts|tsx)"
    ],
    "moduleNameMapper": {
      "intl-codegen/runtime-react": "<rootDir>/src/runtime-react",
      "intl-codegen/runtime": "<rootDir>/src/runtime"
    },
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "pathRegex": "^((?!testoutput).)*$"
        }
      }
    }
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "all"
  }
}
