{
  "name": "intl-codegen",
  "version": "1.5.1",
  "description": "generate code and type definitions from translations",
  "author": "Arpad Borsos <arpad.borsos@googlemail.com>",
  "license": "MIT",
  "main": "dist/intl-codegen.cjs.js",
  "module": "dist/intl-codegen.esm.js",
  "browser": "dist/intl-codegen.umd.js",
  "types": "dist/intl-codegen.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && rollup -c && cp src/types.d.ts dist/intl-codegen.d.ts",
    "prepublishOnly": "npm run test && npm run build",
    "test": "tsc && jest"
  },
  "dependencies": {
    "fs-extra": "^7.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.4",
    "@types/jest": "^23.3.5",
    "@types/node": "^10.12.0",
    "@types/react": "^16.4.18",
    "@types/react-dom": "^16.0.9",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "intl-messageformat": "^2.2.0",
    "intl-messageformat-parser": "^1.4.0",
    "jest": "^23.6.0",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "rollup": "^0.66.6",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-sucrase": "^2.0.0",
    "ts-jest": "^23.10.4",
    "typescript": "3.1.3"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "html",
      "json",
      "text-summary"
    ],
    "coveragePathIgnorePatterns": [
      ".testoutput",
      "src/__tests__",
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(spec|test).(ts|tsx)",
      "**/?(*.)+(spec|test).(ts|tsx)"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": false,
        "isolatedModules": true
      }
    }
  },
  "babel": {
    "plugins": [
      "dynamic-import-node",
      "transform-es2015-modules-commonjs"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "all"
  }
}
