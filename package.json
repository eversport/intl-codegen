{
  "name": "intl-codegen",
  "version": "1.7.1",
  "description": "generate code and type definitions from translations",
  "author": "Arpad Borsos <arpad.borsos@googlemail.com>",
  "license": "MIT",
  "main": "dist/intl-codegen.js",
  "module": "dist/intl-codegen.mjs",
  "browser": "dist/intl-codegen.umd.js",
  "types": "dist/intl-codegen.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && rollup -c",
    "prepublishOnly": "npm run test && npm run build",
    "test": "cross-env NODE_ICU_DATA=node_modules/full-icu jest --runInBand"
  },
  "dependencies": {
    "fs-extra": "^8.0.0"
  },
  "devDependencies": {
    "@types/babel__code-frame": "^7.0.1",
    "@types/fs-extra": "^7.0.0",
    "@types/jest": "^24.0.12",
    "@types/node": "^12.0.0",
    "@types/react": "^16.8.17",
    "@types/react-dom": "^16.8.4",
    "cross-env": "^5.2.0",
    "full-icu": "^1.2.1",
    "intl-messageformat": "^2.2.0",
    "intl-messageformat-parser": "^1.5.1",
    "jest": "^24.8.0",
    "prettier": "^1.17.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "rollup": "^1.11.3",
    "rollup-plugin-dts": "^0.15.1",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.0.0",
    "ts-jest": "^24.0.2",
    "tslib": "^1.9.3",
    "typescript": "3.4.5"
  },
  "optionalDependencies": {
    "@babel/code-frame": "^7.0.0"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "collectCoverage": true,
    "coverageReporters": [
      "html",
      "json",
      "text-summary"
    ],
    "coveragePathIgnorePatterns": [
      ".testoutput",
      "__tests__",
      "node_modules"
    ],
    "testMatch": [
      "**/?(*.)+(spec|test).(ts|tsx)"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "all"
  }
}
