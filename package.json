{
  "name": "intl-codegen",
  "version": "1.2.0",
  "description": "generate code and type definitions from translations",
  "author": "Arpad Borsos <arpad.borsos@googlemail.com>",
  "license": "MIT",
  "main": "dist/intl-codegen.cjs.js",
  "module": "dist/intl-codegen.esm.js",
  "browser": "dist/intl-codegen.umd.js",
  "types": "dist/intl-codegen.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && rollup -c && cp src/intl-codegen.d.ts dist/",
    "prepublishOnly": "npm run test && npm run build",
    "test": "tsc && jest"
  },
  "dependencies": {
    "fs-extra": "^7.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.4",
    "@types/jest": "^23.3.0",
    "@types/node": "^10.5.3",
    "@types/react": "^16.4.7",
    "@types/react-dom": "^16.0.6",
    "babel-plugin-dynamic-import-node": "^2.0.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "intl-messageformat": "^2.2.0",
    "intl-messageformat-parser": "^1.4.0",
    "jest": "^23.4.1",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "rollup": "^0.63.4",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-sucrase": "^2.0.0",
    "ts-jest": "^23.0.1",
    "typescript": "^2.9.2"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "html",
      "json",
      "text-summary"
    ],
    "coveragePathIgnorePatterns": [
      ".testoutput",
      "src/__tests__",
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(spec|test).(ts|tsx)",
      "**/?(*.)+(spec|test).(ts|tsx)"
    ]
  },
  "babel": {
    "plugins": [
      "dynamic-import-node",
      "transform-es2015-modules-commonjs"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "all"
  }
}
