{
  "compilerOptions": {
    "noEmitOnError": true,
    "diagnostics": true,
    "lib": ["dom", "es2018", "esnext"],

    "target": "es2017",

    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,

    "jsx": "react",

    "noEmit": true,
    "inlineSourceMap": true,

    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
  }
}
