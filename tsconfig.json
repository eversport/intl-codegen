{
  "compilerOptions": {
    "noEmitOnError": false,
    "diagnostics": true,
    "lib": ["dom", "es2018", "esnext"],

    "target": "es2017",

    "resolveJsonModule": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,

    "jsx": "react",

    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "inlineSourceMap": true,

    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    "baseUrl": ".",
    "paths": {
      "intl-codegen/runtime": ["runtime/index.ts"]
    }
  },
  "exclude": ["coverage", "dist", "tests/fixtures", ".testoutput"]
}
